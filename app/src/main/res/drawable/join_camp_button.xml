<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:startColor="#D5D5D5"
                android:endColor="#000000"
                android:type="linear" />
            <size android:width="335dp"
                android:height="48dp"/>
            <corners android:radius="48dp"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />
            <corners android:radius="48dp"/>
            <size
                android:width="335dp"
                android:height="48dp"
                />
        </shape>
    </item>

</layer-list>