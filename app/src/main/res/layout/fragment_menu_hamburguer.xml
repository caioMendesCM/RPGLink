<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_menu_hamburguer"
    android:layerType="hardware"
    app:barrierMargin="0.1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fecharMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_menu"
            android:clickable="true"
            android:elevation="4dp"
            android:foreground="@drawable/ic_close_menu"
            android:padding="4dp"
            android:stateListAnimator="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:focusable="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Opções de conta"
            android:textColor="#636363" />

        <LinearLayout
            android:id="@+id/perfil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@drawable/menu_btns"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ic_engrenagem" />
            </FrameLayout>

            <Button
                android:id="@+id/profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/menu_btns"
                android:fontFamily="@font/ubuntu"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="50dp"
                android:text="Meu perfil"

                android:textAllCaps="false"
                android:textColor="#636363"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@drawable/menu_btns"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ic_engrenagem" />
            </FrameLayout>

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/menu_btns"
                android:fontFamily="@font/ubuntu"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="50dp"
                android:text="Informações da conta"
                android:textAllCaps="false"
                android:textColor="#636363"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Opções de jogo"
            android:textColor="#636363" />

        <LinearLayout
            android:id="@+id/fichas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@drawable/menu_btns"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ic_ficha" />
            </FrameLayout>

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/menu_btns"
                android:fontFamily="@font/ubuntu"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="50dp"
                android:text="Minhas fichas"
                android:textAllCaps="false"
                android:textColor="#636363"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/campanhas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@drawable/menu_btns"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ic_campanhas_vector" />
            </FrameLayout>

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/menu_btns"
                android:fontFamily="@font/ubuntu"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="50dp"
                android:text="Gerenciar campanhas"
                android:textAllCaps="false"
                android:textColor="#636363"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/offline"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@drawable/menu_btns"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ic_offline_vector" />
            </FrameLayout>

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/menu_btns"
                android:fontFamily="@font/ubuntu"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="50dp"
                android:text="Jogar offline"
                android:textAllCaps="false"
                android:textColor="#636363"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/batepapo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@drawable/menu_btns"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ic_chat" />
            </FrameLayout>

            <Button
                android:id="@+id/button18"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/menu_btns"
                android:fontFamily="@font/ubuntu"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="50dp"
                android:text="Opções de bate-papo"
                android:textAllCaps="false"
                android:textColor="#636363"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Opções de privacidade"
            android:textColor="#636363" />

        <LinearLayout
            android:id="@+id/notificações"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@drawable/menu_btns"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ic_sino" />
            </FrameLayout>

            <Button
                android:id="@+id/configNotificationsBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/menu_btns"
                android:fontFamily="@font/ubuntu"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="100dp"
                android:text="Configurar notificações"
                android:textAllCaps="false"
                android:textColor="#636363"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/privacidade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@drawable/menu_btns"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ic_capacete" />
            </FrameLayout>

            <Button
                android:id="@+id/securityOptionsBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/menu_btns"
                android:fontFamily="@font/ubuntu"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="50dp"
                android:text="Privacidade da conta"
                android:textAllCaps="false"
                android:textColor="#636363"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>