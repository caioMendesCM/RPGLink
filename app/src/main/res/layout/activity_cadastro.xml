<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/funtoVw"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/guidelineE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/shape" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9" />

            <ImageView
                android:id="@+id/loginRectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/emailRectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/funtoVw"
                app:layout_constraintVertical_bias="0.75"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/ic_rectangle_7" />

            <ImageView
                android:id="@+id/emailRectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/passwordRectangle"
                app:layout_constraintEnd_toEndOf="@+id/loginRectangle"
                app:layout_constraintStart_toStartOf="@+id/loginRectangle"
                app:layout_constraintTop_toBottomOf="@+id/loginRectangle"
                app:srcCompat="@drawable/ic_rectangle_7" />

            <ImageView
                android:id="@+id/passwordRectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/rPasswordRectangle"
                app:layout_constraintEnd_toEndOf="@+id/emailRectangle"
                app:layout_constraintStart_toStartOf="@+id/emailRectangle"
                app:layout_constraintTop_toBottomOf="@+id/emailRectangle"
                app:srcCompat="@drawable/ic_rectangle_7" />

            <ImageView
                android:id="@+id/rPasswordRectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/nascimentoRectangle"
                app:layout_constraintEnd_toEndOf="@+id/passwordRectangle"
                app:layout_constraintStart_toStartOf="@+id/passwordRectangle"
                app:layout_constraintTop_toBottomOf="@+id/passwordRectangle"
                app:srcCompat="@drawable/ic_rectangle_7" />

            <ImageView
                android:id="@+id/nascimentoRectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/cadastroBtn"
                app:layout_constraintEnd_toEndOf="@+id/rPasswordRectangle"
                app:layout_constraintStart_toStartOf="@+id/rPasswordRectangle"
                app:layout_constraintTop_toBottomOf="@+id/rPasswordRectangle"
                app:srcCompat="@drawable/ic_rectangle_7" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.60" />

            <ImageView
                android:id="@+id/cadastroBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/guidelineM"
                app:layout_constraintEnd_toEndOf="@+id/nascimentoRectangle"
                app:layout_constraintStart_toStartOf="@+id/nascimentoRectangle"
                app:layout_constraintTop_toBottomOf="@+id/nascimentoRectangle"
                app:srcCompat="@drawable/ic_rectangle_7" />

            <TextView
                android:id="@+id/Cadastre-seTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:text="CADASTRE-SE"
                android:textColor="#706F6F"
                android:textColorHint="#706F6F"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/cadastroBtn"
                app:layout_constraintEnd_toEndOf="@+id/cadastroBtn"
                app:layout_constraintStart_toStartOf="@+id/cadastroBtn"
                app:layout_constraintTop_toTopOf="@+id/cadastroBtn" />

            <Button
                android:id="@+id/facebookBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="facebookLogin"
                app:layout_constraintBottom_toBottomOf="@+id/funtoVw"
                app:layout_constraintEnd_toEndOf="@+id/googleBtn"
                app:layout_constraintStart_toStartOf="@+id/googleBtn"
                app:layout_constraintTop_toBottomOf="@+id/googleBtn"
                android:background="@drawable/ic_rectangle_7" />

            <TextView
                android:id="@+id/facebookLoginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:drawableStart="@drawable/ic_facebook"
                android:drawablePadding="8dp"
                android:fontFamily="@font/ubuntu"
                android:text="LOGIN COM FACEBOOK"
                android:textColor="#706F6F"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/facebookBtn"
                app:layout_constraintEnd_toEndOf="@+id/facebookBtn"
                app:layout_constraintStart_toStartOf="@+id/facebookBtn"
                app:layout_constraintTop_toTopOf="@+id/facebookBtn" />

            <Button
                android:id="@+id/googleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:onClick="googleLogin"
                app:layout_constraintBottom_toTopOf="@+id/facebookBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guidelineM"
                app:layout_constraintVertical_bias="0.25"
                app:layout_constraintVertical_chainStyle="packed"
                android:background="@drawable/ic_rectangle_7" />

            <TextView
                android:id="@+id/googleLoginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:clickable="false"
                android:elevation="2dp"
                android:drawableStart="@drawable/ic_google"
                android:drawablePadding="8dp"
                android:fontFamily="@font/ubuntu"
                android:text="LOGIN COM GOOGLE"
                android:textColor="#706F6F"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/googleBtn"
                app:layout_constraintEnd_toEndOf="@+id/googleBtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/googleBtn"
                app:layout_constraintTop_toTopOf="@+id/googleBtn" />

            <ImageView
                android:id="@+id/loginIcon"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/loginRectangle"
                app:layout_constraintStart_toStartOf="@+id/loginRectangle"
                app:layout_constraintTop_toTopOf="@+id/loginRectangle"
                app:srcCompat="@drawable/ic_nome_de_usuario" />

            <ImageView
                android:id="@+id/senhaIcon"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/passwordRectangle"
                app:layout_constraintStart_toStartOf="@+id/passwordRectangle"
                app:layout_constraintTop_toTopOf="@+id/passwordRectangle"
                app:srcCompat="@drawable/ic_senha" />

            <ImageView
                android:id="@+id/senhaIcon2"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/nascimentoRectangle"
                app:layout_constraintStart_toStartOf="@+id/nascimentoRectangle"
                app:layout_constraintTop_toTopOf="@+id/nascimentoRectangle"
                app:srcCompat="@drawable/ic_nascimento" />

            <ImageView
                android:id="@+id/senhaIcon3"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/rPasswordRectangle"
                app:layout_constraintStart_toStartOf="@+id/rPasswordRectangle"
                app:layout_constraintTop_toTopOf="@+id/rPasswordRectangle"
                app:srcCompat="@drawable/ic_senha" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/emailRectangle"
                app:layout_constraintStart_toStartOf="@+id/emailRectangle"
                app:layout_constraintTop_toTopOf="@+id/emailRectangle"
                app:srcCompat="@drawable/ic_email" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:hint=" "
                android:layout_marginBottom="8dp"
                android:textColorHint="#706F6F"
                app:layout_constraintBottom_toBottomOf="@+id/emailRectangle"
                app:layout_constraintEnd_toEndOf="@+id/emailRectangle"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/emailRectangle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Email"
                    android:inputType="text|textEmailAddress"
                    android:textColor="#706F6F"
                    android:textColorHint="#706F6F" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/rPasswordCInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:hint=" "
                android:layout_marginBottom="8dp"
                android:textColorHint="#706F6F"
                app:layout_constraintBottom_toBottomOf="@+id/rPasswordRectangle"
                app:layout_constraintEnd_toEndOf="@+id/rPasswordRectangle"
                app:layout_constraintStart_toEndOf="@+id/senhaIcon3"
                app:layout_constraintTop_toTopOf="@+id/rPasswordRectangle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rPasswordCEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Repita sua senha"
                    android:inputType="textPassword"
                    android:textColor="#706F6F"
                    android:textColorHint="#706F6F" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nascimentoinputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:hint=" "
                android:layout_marginBottom="8dp"
                android:textColorHint="#706F6F"
                app:layout_constraintBottom_toBottomOf="@+id/nascimentoRectangle"
                app:layout_constraintEnd_toEndOf="@+id/nascimentoRectangle"
                app:layout_constraintStart_toEndOf="@+id/senhaIcon2"
                app:layout_constraintTop_toTopOf="@+id/nascimentoRectangle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nascimentoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Nascimento"
                    android:inputType="date"
                    android:textColor="#706F6F"
                    android:textColorHint="#706F6F" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/ouTxtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:text="OU"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/googleBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cadastroBtn" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/LoginCInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:hint=" "
                android:textColorHint="#706F6F"
                app:layout_constraintBottom_toBottomOf="@+id/loginRectangle"
                app:layout_constraintEnd_toEndOf="@+id/loginRectangle"
                app:layout_constraintStart_toEndOf="@+id/loginIcon"
                app:layout_constraintTop_toTopOf="@+id/loginRectangle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/LoginCEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Nome de usuÃ¡rio"
                    android:inputType="text"
                    android:textColor="#706F6F"
                    android:textColorHint="#706F6F" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/termosCadastroTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/ubuntu"
                android:gravity="center"
                android:text="@string/termos_cadastro"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guidelineE" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordCInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:hint=" "
                android:textColorHint="#706F6F"
                app:layout_constraintBottom_toBottomOf="@+id/passwordRectangle"
                app:layout_constraintEnd_toEndOf="@+id/passwordRectangle"
                app:layout_constraintStart_toEndOf="@+id/senhaIcon"
                app:layout_constraintTop_toTopOf="@+id/passwordRectangle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordCEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:textColor="#706F6F"
                    android:textColorHint="#706F6F" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>